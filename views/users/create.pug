extends ../layouts/common.pug
block content
    h1 Create User 

    if errors
        each error in errors 
            .alert.alert-danger= error


    form(action="/users/create", method="POST", enctype="multipart/form-data")
        .mb-3
            lable.form-label Name 
            input.form-control(type="text", name="name")
        .mb-3
            lable.form-label Phone 
            input.form-control(type="text", name="phone")
        .mb-3
            lable.form-label Email 
            input.form-control(type="text", name="email")
        .mb-3
            lable.form-label Password 
            input.form-control(type="password", name="password")
        .mb-3 
            label.form-label(for="avatar") Avatar
            input.form-control(type="fileupload", name="avatar")

        button.btn.btn-primary Create 