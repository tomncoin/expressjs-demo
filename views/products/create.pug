extends ../layouts/common.pug
block content
    h1 Create Product 

    if errors
        each error in errors 
            .alert.alert-danger= error

    form(action="/products/create", method="POST")
        .mb-3
            lable.form-label Name 
            input.form-control(type="text", name="name", value= values?values.name:'')
        .mb-3
            lable.form-label Price 
            input.form-control(type="text", name="price", value= values?values.price:'')

        button.btn.btn-primary Create 